---
import { Image } from "astro:assets";
import logoImage from "../assets/logo2.png";
---

<header>
    <div class="brand">
        <Image
            src={logoImage}
            alt="MichaelTech Logo"
            class="logo"
            width={144}
            height={144}
            quality="high"
            loading="eager"
        />
        <h1 data-i18n="header.greeting">Hi, I'm <span>Michael</span></h1>
    </div>
    <p class="intro" data-i18n="header.bio">
        <slot />
    </p>
</header>

<style>
    header {
        margin-bottom: 100px;
        animation: fadeUp 0.8s ease-out;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 20px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }

    .logo {
        width: 72px;
        height: 72px;
        object-fit: contain;
        border-radius: 50%; /* optional: remove if the logo has its own shape constraints */
    }

    h1 {
        font-family: "Fraunces", serif;
        font-size: clamp(2.5rem, 8vw, 4rem);
        font-weight: 300;
        letter-spacing: -0.02em;
        margin: 0;
        color: var(--text);
    }

    h1 span {
        color: var(--accent);
    }

    .intro {
        font-size: 1.15rem;
        color: var(--text-muted);
        max-width: 540px;
        font-weight: 300;
    }

    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @media (max-width: 600px) {
        header {
            margin-bottom: 60px;
        }
    }
</style>
