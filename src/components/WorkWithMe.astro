<style>
    .contact-section {
        padding: 40px 0 20px;
        width: 100%;
        position: relative;
        z-index: 10;
        animation: fadeUp 0.8s ease-out 0.2s backwards;
    }

    .work-with-me-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px 0 40px;
        width: 100%;
    }

    .work-with-me {
        font-family: "Fraunces", serif;
        font-size: 3rem;
        font-weight: 300;
        text-decoration: none;
        cursor: pointer;
        opacity: 0;
        transition: opacity 0.8s ease;
        position: relative;

        /* Flashlight gradient text */
        color: transparent;
        background-color: #333;
        background-image: radial-gradient(
            circle 150px at var(--grad-x, 50%) var(--grad-y, 50%),
            #c9a227 0%,
            #c9a227 20%,
            #444 60%
        );
        background-size: 100% 100%;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        will-change: background-position, background-image;
    }

    /* Contact details area */
    .contact-details {
        text-align: center;
        padding: 32px 0 0;
        border-top: 1px solid var(--card-border);
    }

    .contact-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: var(--accent);
        margin-bottom: 24px;
        font-weight: 500;
    }

    .contact-links {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 32px;
        flex-wrap: wrap;
    }

    .contact-link {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.95rem;
        font-weight: 400;
        padding: 10px 16px;
        border-radius: 10px;
        transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
        position: relative;
    }

    .contact-link::before {
        content: "";
        position: absolute;
        inset: 0;
        border-radius: 10px;
        background: rgba(201, 162, 39, 0.06);
        opacity: 0;
        transition: opacity 0.35s ease;
    }

    .contact-link:hover {
        color: var(--accent);
        transform: translateY(-2px);
    }

    .contact-link:hover::before {
        opacity: 1;
    }

    .contact-link svg {
        width: 18px;
        height: 18px;
        flex-shrink: 0;
        transition: color 0.35s ease;
    }

    .contact-link:hover svg {
        filter: drop-shadow(0 0 6px rgba(201, 162, 39, 0.4));
    }

    @media (max-width: 768px) {
        .work-with-me {
            font-size: 2rem;
        }

        .contact-links {
            flex-direction: column;
            gap: 8px;
        }

        .contact-link {
            font-size: 0.9rem;
        }
    }

    @keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    const el = document.getElementById("work-with-me");

    if (el) {
        // Fade in
        setTimeout(() => {
            el.style.opacity = "1";
        }, 300);

        // State
        let mouseX = 0;
        let mouseY = 0;
        let currentX = 50;
        let currentY = 50;

        let clientWidth = 0;
        let clientHeight = 0;

        const LERP_FACTOR = 0.08;

        const updateDimensions = () => {
            const rect = el.getBoundingClientRect();
            clientWidth = rect.width;
            clientHeight = rect.height;
        };

        updateDimensions();
        window.addEventListener("resize", updateDimensions);

        window.addEventListener("mousemove", (e) => {
            const rect = el.getBoundingClientRect();
            mouseX = e.clientX - rect.left;
            mouseY = e.clientY - rect.top;
        });

        let isMobile = window.matchMedia("(max-width: 768px)").matches;
        let time = 0;

        function animate() {
            if (isMobile) {
                time += 0.003;
                const rect = el.getBoundingClientRect();
                const w = rect.width || 200;
                const h = rect.height || 50;

                const targetX = w / 2 + Math.cos(time) * (w * 0.4);
                const targetY = h / 2 + Math.sin(time * 0.7) * (h * 0.8);

                currentX += (targetX - currentX) * 0.05;
                currentY += (targetY - currentY) * 0.05;
            } else {
                currentX += (mouseX - currentX) * LERP_FACTOR;
                currentY += (mouseY - currentY) * LERP_FACTOR;
            }

            el.style.setProperty("--grad-x", `${currentX}px`);
            el.style.setProperty("--grad-y", `${currentY}px`);

            requestAnimationFrame(animate);
        }

        animate();
    }
</script>
